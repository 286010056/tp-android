<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="73dp"
    android:background="@color/color_white"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/dimen_content_padding"
    android:paddingRight="@dimen/dimen_content_padding">

    <ImageView
        android:id="@+id/token_icon"
        android:layout_width="@dimen/dimen_icon_size"
        android:layout_height="@dimen/dimen_icon_size"
        android:background="@drawable/shape_icon_bg" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:layout_weight="1.0"
        android:orientation="vertical">

        <TextView
            android:id="@+id/token_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_text_3"
            android:textSize="@dimen/text_size_17"
            tools:text="BTC" />

        <TextView
            android:id="@+id/token_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:textColor="@color/color_text_80"
            android:textSize="@dimen/text_size_12"
            tools:text="Bitcoin" />
    </LinearLayout>

    <ImageView
        android:id="@+id/token_state"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:scaleType="center"
        android:src="@drawable/ic_token_normal"
        android:visibility="gone"/>
</LinearLayout>
