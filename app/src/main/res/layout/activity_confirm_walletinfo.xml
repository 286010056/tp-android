<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.tokenbank.activity.BWDInfoActivity">

    <com.tokenbank.view.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_bakup_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:text="确认你的钱包助记词"
        android:textColor="@color/common_black_fontcolor"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_bakup_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:text="请按抄写的顺序点击助记词，确认你的备份助记词正确"
        android:textColor="#808080"
        android:textSize="14sp" />

    <LinearLayout
        android:id="@+id/layout_words"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <com.tokenbank.view.TagFlowLayout
            android:id="@+id/flow_word_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_word_bg"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="22dp"/>

        <com.tokenbank.view.TagFlowLayout
            android:id="@+id/flow_word_source"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_word_bg"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            />
    </LinearLayout>

    <EditText
        android:id="@+id/edt_wallet_pk"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="22dp"
        android:background="#f5f5f9" />

    <TextView
        android:id="@+id/tv_finish"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/shape_splash_createwallet_bg"
        android:gravity="center"
        android:text="完成"
        android:textColor="@color/white"
        android:textSize="17sp" />


</LinearLayout>
