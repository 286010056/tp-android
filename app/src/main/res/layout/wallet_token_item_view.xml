<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="77dp"
    android:background="@color/color_white"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/dimen_content_padding"
    android:paddingRight="@dimen/dimen_content_padding">

    <ImageView
        android:id="@+id/token_icon"
        android:layout_width="@dimen/dimen_icon_size"
        android:layout_height="@dimen/dimen_icon_size"
        android:background="@drawable/shape_icon_bg" />

    <TextView
        android:id="@+id/token_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:textColor="@color/color_text_80"
        android:textSize="@dimen/text_size_18"
        tools:text="BTC" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:layout_marginLeft="10dp"
        android:gravity="right"
        android:orientation="vertical"
        android:layout_marginRight="10dp">

        <TextView
            android:id="@+id/token_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@color/color_text_80"
            android:textSize="@dimen/text_size_21"
            tools:text="0.00153"
            android:maxLines="1"
            android:ellipsize="end"/>

        <!--<TextView-->
            <!--android:id="@+id/token_asset"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginTop="3dp"-->
            <!--android:ellipsize="end"-->
            <!--android:singleLine="true"-->
            <!--android:textColor="@color/color_text_80"-->
            <!--android:textSize="@dimen/text_size_14"-->
            <!--tools:text="≈ ¥ 120" />-->

    </LinearLayout>
</LinearLayout>
